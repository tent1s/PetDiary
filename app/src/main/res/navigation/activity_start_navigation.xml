<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/activity_start_navigation"
    app:startDestination="@id/petsListFragment">

    <fragment
        android:id="@+id/petsListFragment"
        android:name="com.tent1s.android.petdiary.ui.start_activity.pets_list.PetsListFragment"
        android:label="Питомци">
        <action
            android:id="@+id/action_petsListFragment_to_addPetsFragment"
            app:destination="@id/addPetsFragment" />
        <action
            android:id="@+id/action_petsListFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/addPetsFragment"
        android:name="com.tent1s.android.petdiary.ui.start_activity.add_pet.AddPetsFragment"
        android:label="Создать">
        <action
            android:id="@+id/action_addPetsFragment_to_petsListFragment"
            app:destination="@id/petsListFragment"
            app:popUpTo="@id/addPetsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.tent1s.android.petdiary.MainActivity"
        android:label="MainActivity" >
        <argument
            android:name="namePet"
            app:argType="string" />
    </activity>
</navigation>